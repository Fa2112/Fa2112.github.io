---
const { title, text } = Astro.props;
---

<div
  class="border text-white text-center bg-black h-[30%] w-full flex flex-col transition duration-400 blur-lg"
  data-observe
>
  <p
    class="text-lg font-strong py-[0.5rem] uppercase laptop:text-3xl laptop:py-[1rem]"
  >
    {title}
  </p>
  <div
    class="w-full grow font-data text-xs px-[0.5rem] flex justify-center uppercase laptop:text-xl"
  >
    {text}
  </div>
  <div class="flex justify-center items-center h-full">
    <slot />
  </div>
</div>
